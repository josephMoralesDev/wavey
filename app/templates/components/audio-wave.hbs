<svg version="1.1"
     baseProfile="full"
     width="300" height="1000"
     {{did-insert this.updateArray}}
     {{did-update this.updateArray @bufferArray}}
     >
  {{#each this.renderedArray as |buffer|}}
    <rect class="audio-wave__buffer-bar" y={{buffer.y}} x={{buffer.x}} width={{buffer.width}} height={{buffer.height}} fill={{buffer.fill}} />
  {{/each}}
</svg>
